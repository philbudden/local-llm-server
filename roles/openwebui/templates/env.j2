# OpenWebUI environment configuration
# Generated by Ansible - DO NOT EDIT MANUALLY
# Source: roles/openwebui/templates/env.j2

# Bind the OpenWebUI app server to all interfaces inside the container
# so Docker port-forwarding can reach it
OPENWEBUI_HOST=0.0.0.0
OPENWEBUI_PORT={{ openwebui_api_port }}

# Reach Ollama on the macOS host via Docker Desktop's host-gateway hostname.
# 127.0.0.1 would resolve to the container itself; host.docker.internal
# resolves to the Docker host (the Mac) from inside any container.
OLLAMA_API_BASE_URL={{ ollama_container_url }}

# Optional: additional OpenWebUI settings
# WEBUI_SECRET_KEY=<generate-strong-random-value>
# WEBUI_AUTH=true
