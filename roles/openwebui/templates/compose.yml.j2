---
# OpenWebUI Docker Compose configuration
# Generated by Ansible - DO NOT EDIT MANUALLY
# Source: roles/openwebui/templates/compose.yml.j2

services:
  openwebui:
    image: ghcr.io/open-webui/open-webui:{{ openwebui_image_tag }}
    container_name: {{ openwebui_container_name }}
    restart: unless-stopped
    ports:
      - "{{ openwebui_bind_host }}:{{ openwebui_api_port }}:8080"
    volumes:
      - {{ openwebui_data_dir }}:/app/backend/data
    environment:
      - OLLAMA_API_BASE_URL=${OLLAMA_API_BASE_URL}
    env_file:
      - .env
    networks:
      - llm-network

networks:
  llm-network:
    name: llm-network
    driver: bridge
