# Ansible-lint configuration

---
extends: default

# Exclude paths from linting
exclude_paths:
  - .git/
  - .venv/
  - venv/
  - __pycache__/
  - .ansible/

# Rules to ignore or customize
rules:
  # Avoid line length warnings for inventory and doc files
  line-length:
    max: 120
  
  # Allow use of shell module where appropriate
  risky-shell-task: disable
  
  # Configure loop variable prefix rule
  loop-var-prefix: []

# Verbosity level (higher = more output)
verbosity: 1
