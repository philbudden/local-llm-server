# OpenWebUI environment configuration template
# Copy this to .env and configure values as needed
# NEVER commit .env with secrets to version control

# Bind the OpenWebUI app server to all interfaces inside the container
OPENWEBUI_HOST=0.0.0.0
OPENWEBUI_PORT=3000

# Reach Ollama on the macOS host (host.docker.internal resolves to the Docker host)
OLLAMA_API_BASE_URL=http://host.docker.internal:11434

# Optional: additional OpenWebUI settings
# WEBUI_SECRET_KEY=<generate-strong-random-value>
# WEBUI_AUTH=true
